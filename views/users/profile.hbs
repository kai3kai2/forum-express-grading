<div class="card card-body mb-3">
    <div class="row">
      <div class="col-md-4">
        <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px; margin-bottom: 25px;" alt="profile-img">
      </div>
      <div class="col-md-6">
        <h1>{{user.name}}</h1>
        <p>{{user.email}}</p>
        <p><strong>{{comments.length}}</strong> 已評論餐廳</p>
        <p><strong>{{user.FavoritedRestaurants.length}}</strong> 已收藏餐廳</p>
        <p><strong>{{user.Followings.length}}</strong> 已追蹤餐廳</p>
        <p><strong>{{user.Followers.length}}</strong> 粉絲</p>
        <a class="btn btn-link link-primary" href="/users/{{user.id}}/edit"><button type="button" class="btn btn-primary">edit</button>
        </a>
      </div>
    </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="card card-body mb-3 p-0">
      <div class="card-header">
        <strong>{{user.Followings.length}}</strong> followings (追蹤者)
      </div>
      <div class="row g-0 p-3">
        {{#if user.Followings.length}}
          {{#each user.Followings}}
            <div class="col-md-auto px-3">
              <a href="/restaurants/{{this.id}}">
                <img src="{{this.image}}" alt="restaurant-alt" style="width:50px; height:50px;"/>
              </a>
            </div>
          {{/each}}
        {{else}}
          <p>尚未追蹤的人</p>
        {{/if}}
      </div>
    </div>

    <div class="card card-body mb-3 p-0">
      <div class="card-header">
        <strong>{{user.Followers.length}}</strong> follower (粉絲)
      </div>
      <div class="row g-0 p-3">
        {{#if user.Followers.length}}
          {{#each user.Followers.}}
            <div class="col-md-auto px-3">
              <a href="/restaurants/{{this.id}}">
                <img src="{{this.image}}" alt="restaurant-alt" style="width:50px; height:50px;"/>
              </a>
            </div>
          {{/each}}
        {{else}}
          <p>尚未粉絲</p>
        {{/if}}
      </div>
    </div>
  </div>
  
    

  <div class="col-md-8">
    <div class="card card-body mb-3 p-0">
      <div class="card-header">
        <strong>{{comments.length}}</strong> 已評論餐廳
      </div>
      <div class="row g-0 p-3">
        {{#if comments.length}}
          {{#each comments}}
            <div class="col-md-auto px-3">
              <a href="/restaurants/{{this.Restaurant.id}}">
                <img src="{{this.Restaurant.img}}" alt="restaurant-alt" style="width:50px; height:50px;"/>
              </a>
            </div>
          {{/each}}
        {{else}}
          <p>尚未有評論的餐廳</p>
        {{/if}}
      </div>
    </div>

    <div class="card card-body mb-3 p-0">
      <div class="card-header">
        <strong>{{user.FavoritedRestaurants.length}}</strong> 已收藏的餐廳
      </div>
      <div class="row g-0 p-3">
        {{#if user.FavoritedRestaurants.length}}
          {{#each user.FavoritedRestaurants}}
            <div class="col-md-auto px-3">
              <a href="/restaurants/{{this.id}}">
                <img src="{{this.img}}" alt="restaurant-alt" style="width:50px; height:50px;"/>
              </a>
            </div>
          {{/each}}
        {{else}}
          <p>尚未有收藏的餐廳</p>
        {{/if}}
      </div>
    </div>
  </div>
</div>